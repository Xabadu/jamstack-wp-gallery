{
  "name": "jamstack-wp-gallery",
  "version": "1.0.0",
  "description": "A gallery of articles using a Wordpress API",
  "main": "index.js",
  "scripts": {
    "build": "parcel build src/index.html",
    "lint": "eslint src --fix",
    "package": "docker build . -t jamstack-wp-gallery:latest",
    "containerized": "docker run --rm --name jamstack-wp-gallery -p 1234:1234 jamstack-wp-gallery",
    "start": "parcel src/index.html",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cypress": "cypress open",
    "test:update": "jest -u"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Xabadu/jamstack-wp-gallery.git"
  },
  "keywords": [
    "javascript",
    "react",
    "wordpress"
  ],
  "author": "Fernando Larra√±aga <xabadu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Xabadu/jamstack-wp-gallery/issues"
  },
  "homepage": "https://github.com/Xabadu/jamstack-wp-gallery#readme",
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.4",
    "axios-mock-adapter": "^1.18.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^8.0.3",
    "jest": "^26.0.1",
    "lint-staged": "^13.2.1",
    "netlify-plugin-cypress": "^1.3.11",
    "parcel-bundler": "^1.12.4",
    "prettier": "2.0.5",
    "stylus": "^0.54.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.21.2",
    "core-js": "^2.6.11",
    "cypress": "^4.11.0",
    "html-react-parser": "^0.11.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "react-router-dom": "^5.2.0"
  }
}
