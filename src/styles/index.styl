*
  margin 0
  padding 0
  box-sizing border-box
  font-family 'Poppins', sans-serif

body
  color #2d2d2d

a
  color inherit
  text-decoration none

button
  cursor pointer
/*
  Header.js component styles
*/
header
  background-color #000000
  .logos-contanner
    display flex
    align-items center
    justify-content space-between

    .logo img
      max-width 100%
/*
  Grid.js component styles
*/
.grid
  display grid
  grid-gap 32px
  grid-template-columns repeat(auto-fill, minmax(300px, 1fr))
  margin-bottom 30px

/*
  Categories.js component styles
*/
.categories-grid
  display grid
  margin 30px 0
  grid-gap 30px
  grid-template-columns repeat(auto-fill, minmax(150px, 1fr))

  button
    padding 5px
    border-radius 2px
    border 2px solid #ececec
    background-color #ffffff
    transition background-color 400ms ease
    &:focus,
    &:hover
      background-color #9e9e9e
      color #ffffff
/*
  Container.js component styles
*/
.container
  width 100%
  margin auto
  padding 0 15px
  max-width 1170px
/*
  Item.js component styles
*/
.item-container
  border-radius 2px
  overflow hidden

.item-container-image
  z-index 1
  position relative
  margin-bottom 15px
  background-color #2d2d2d
  &:hover img
    transform translateY(-35%)

  img 
    width 100%
    display block
    transition transform 250ms ease
    position relative
    z-index 3

  .item-container-links
    width 100%
    height 35%
    display flex
    align-items center
    justify-content center
    position absolute
    z-index 2
    bottom 0

    a
      color #ffffff
      font-size 10px
      padding 10px 20px
      margin-right 10px
      border-radius 2px
      background-color #2578B3
      transition background-color 400ms ease
      &:hover
        background-color #1b5680
      &:last-of-type
        margin-right 0

.tutorial-container
  width 100%
  max-width 770px
  padding 15px 0
  margin 0 auto

  h1,h2,p
    margin-bottom 15px

  p
    text-align justify
    a
      color #3987bd

  img
    width 100%
    display block
    border-radius 5px
    &.sello-garantia
      width 220px

  ul
    padding 0
    margin 0 0 9px 25px
    list-style disc
    list-style-position inherit
    a
      font-weight 700
