html
  font-family: 'Poppins', sans-serif;
.grid
  display grid
  grid-template-columns repeat(auto-fill, minmax(300px, 1fr))
  grid-gap 32px
.item
  border 1px solid tomato
  border-radius 4px

.item-container
  overflow hidden
  padding 10px
  img
    width 100%
  a
    text-decoration none
    color #2d2d2d

.categories-grid
  display grid
  grid-template-columns repeat(auto-fill, minmax(150px, 1fr))
  grid-gap 30px
  margin-bottom 30px

  button
    background white
    color gray
    border 1px solid gray
    border-radius 2px
    text-align center
    padding 5px

    &:focus
      background gray
      color white

.item-container-image
  position relative
  z-index 1
  &:hover img
    transform translateY(-50%)

  img 
    position relative
    z-index 3
    transition transform 250ms

  .item-container-links
    position absolute
    bottom 10px
    z-index 2
    background #2d2d2d
    width 100%
    text-align center
    padding 5px 0
    a
      background-color tomato
      color white
      margin-right 5px
    // z-index al medio => 2
